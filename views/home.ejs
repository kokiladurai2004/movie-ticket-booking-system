</head>
<body>
    <header>
        <nav class="navbar">
            <h1>Movie Tickets</h1>
            <ul>
                <li><a href="/index">Logout</a></li>
            </ul>
        </nav>
    </header>

    <div class="main-content">
        <!-- Filter Section -->
        <aside class="filter-section">
            <form method="get" action="/home">
                <!-- Sort By dropdown -->
                <label for="sortBy">Sort By:</label><br>
                <select name="sortBy" id="sortBy">
                    <option value="">Select...</option>
                    <option value="newToOld">Newest to Oldest</option>
                    <option value="oldToNew">Oldest to Newest</option>
                </select>

                <!-- Language checkboxes -->
                <div>
                    <label>Language:</label><br>
                    <input type="checkbox" name="language" value="Tamil"> Tamil<br>
                    <input type="checkbox" name="language" value="English"> English<br>
                    <input type="checkbox" name="language" value="Hindi"> Hindi<br>
                </div>

                <!-- Genre checkboxes -->
                <div>
                    <label>Genre:</label><br>
                    <input type="checkbox" name="genre" value="Comedy"> Comedy<br>
                    <input type="checkbox" name="genre" value="Action"> Action<br>
                    <input type="checkbox" name="genre" value="Drama"> Drama<br>
                    <input type="checkbox" name="genre" value="Horror"> Horror<br>
                    <input type="checkbox" name="genre" value="Sci-fi"> Sci-fi<br>
                </div>

                <!-- Location checkboxes -->
                <div>
                    <label>Location:</label><br>
                    <input type="checkbox" name="location" value="Vellore"> Vellore<br>
                    <input type="checkbox" name="location" value="Chennai"> Chennai<br>
                </div>

                <button type="submit">Filter</button>
            </form>
        </aside>

        <!-- Movie Section -->
        <section class="movie-section">
            <% movies.forEach(movie => { %>
                <div class="movie-card">
                    <h3><%= movie.title %></h3>
                    <img src="<%= movie.posterUrl %>" alt="<%= movie.title %> Poster">
                    <p>Language: <%= movie.language %></p>
                    <p>Genre: <%= movie.genre %></p>
                    <p>Location: <%= movie.location %></p>
                    <a href="/book/<%= movie.title %>">
                        <button>Book Show</button>
                    </a>
                </div>
            <% }) %>
        </section>
    </div>
</body>
</html>
