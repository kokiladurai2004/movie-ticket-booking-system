    <div class="filter-container">
        <h1>Available Movies</h1>
        <ul class="movie-list">
            <% movies.forEach(movie=> { %>
                <li>
                    <h2>
                        <%= movie.title %>
                    </h2>
                    <p>Genre: <%= movie.genre %>
                    </p>
                    <p>Language: <%= movie.language %>
                    </p>
                    <p>Theater: <%= movie.theater %>
                    </p>
                    <p>Showtime: <%= movie.showtime.toLocaleString() %>
                    </p>
                    <p>Price: $<%= movie.price %>
                    </p>
                    <a href="/book/<%= movie._id %>">Book Now</a>
                </li>
                <% }) %>
        </ul>
    </div>
</body>

