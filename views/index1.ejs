<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Movie Ticket Booking</title>
    <link rel="stylesheet" href="/styles.css">
    <!-- Add Bootstrap or any other styling framework for layout -->
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
        }

        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .movie-slider {
            margin: 20px 0;
            display: flex;
            overflow: hidden;
            width: 100%;
        }

        .movie-slide {
            flex: 0 0 100%;
            margin: 0 5px;
        }

        .movie-slide img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .filters {
            display: flex;
            justify-content: space-between;
            margin: 20px 0;
        }

        .filters select {
            padding: 8px;
            border-radius: 5px;
        }

        .movie-list {
            list-style-type: none;
            padding: 0;
        }

        .movie-list li {
            margin: 20px 0;
        }

        .movie-list h2 {
            margin: 0;
            font-size: 1.5em;
        }

        .movie-list p {
            margin: 5px 0;
        }

        .filter-container {
            margin: 20px 0;
        }

        .movie-slider {
            margin: 20px 0;
            display: flex;
            overflow: hidden;
            width: 100%;
        }

        .movie-slide {
            flex: 0 0 25%;
            /* Each slide will take up 25% of the width (4 images) */
            margin: 0 5px;
        }

        .movie-slide img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/theatre">Theatres</a>
        <a href="/movies">Movies</a>
        <a href="/signin">Sign In</a>
        <a href="/signup">Sign Up</a>
    </div>

    <!-- Movie Slider (Carousel) -->
    <div class="movie-slider">
        <div class="movie-slide">
            <img src="\views\image\amaran.jpg" alt="Movie 1">
        </div>
        <div class="movie-slide">
            <img src="https://via.placeholder.com/400x200?text=Movie+2" alt="Movie 2">
        </div>
        <div class="movie-slide">
            <img src="https://via.placeholder.com/400x200?text=Movie+3" alt="Movie 3">
        </div>
    </div>
    

    <!-- Filters Section -->
    <div class="filters">
        <!-- Language Filter -->
        <form action="/" method="get">
            <select id="language-filter" name="language">
                <option value="all">Select Language</option>
                <option value="Tamil">Tamil</option>
                <option value="English">English</option>
                <option value="Hindi">Hindi</option>
            </select>

            <!-- Sort By Filter -->
            <select id="sort-filter" name="sort">
                <option value="old-to-new">Sort By: Old to New</option>
                <option value="new-to-old">Sort By: New to Old</option>
            </select>

            <!-- Genre Filter -->
            <select id="genre-filter" name="genre">
                <option value="all">Select Genre</option>
                <option value="Action">Action</option>
                <option value="Drama">Drama</option>
                <option value="Comedy">Comedy</option>
            </select>

            <!-- Submit button -->
            <button type="submit">Apply Filters</button>
        </form>
    </div>

